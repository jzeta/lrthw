<h1><%= room.name %></h1>

<pre>
<%= room.description %>
</pre>

<% if room.name.include? "Death" or room.name.include? "End" %>
  <p>
    <a href="/">Play Again?</a>
  </p>
<% else %>
  <p>
  <form action="/game" method="POST">
    <input type="text" name="action"> <input type="SUBMIT">
  </form>
  </p>
<% end %>